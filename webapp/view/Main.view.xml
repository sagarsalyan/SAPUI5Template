<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="app.SAPUI5Template.controller.Main"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Main">
				<content>
					<List items="{/Employees}" headerText="Employees" growing="true" growingThreshold="4" growingScrollToLoad="false" mode="SingleSelectMaster" selectionChange="onNotificationSelect">
						<StandardListItem title="{EmployeeID}" description="{FirstName}" iconDensityAware="false" iconInset="false"/>
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>